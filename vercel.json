{
  "buildCommand": "pnpm exec convex deploy --cmd-url-env-var-name EXPO_PUBLIC_CONVEX_URL --cmd 'pnpm run build:web'",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/survey/:surveyId/:response", "destination": "/survey/[surveyId]/[response].html" },
    { "source": "/follow-up/:surveyId", "destination": "/follow-up/[surveyId].html" },
    { "source": "/results", "destination": "/results.html" },
    { "source": "/create", "destination": "/create.html" },
    { "source": "/write-tag", "destination": "/write-tag.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
